                return;
            }
            UpdateServer("earthpeace");
        }
        console.log($('#chkSurya'));
    }

    function UpdateServer(termToUpdate) {
        $.ajax({
            url: '/home/UpdateTerms',
            type: 'GET',
            data: { termsType: termToUpdate },
            dataType: 'json',
            contentType: 'application/json',
            success: function (data) {
                console.log(data);
                if (data.success == true) {
                    window.location.reload();
                }
            },
            error: function () {
                alert("error");
            }
        });
    }
</script>
