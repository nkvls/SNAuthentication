<script type="text/javascript">
    function TermsCondition(checkbox) {
        if (checkbox == "chkSurya") {
            if ($('#chkSurya')[0].checked == false) {
                alert('Please tick the checkbox and click continue');
                return;
            }
            UpdateServer("surya");
        }
        else if (checkbox == "chkGoldenLotus") {
