@using SNAuthentication.Helper
@model SNAuthentication.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="row">
    <div class="offset3 span6">
        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">&nbsp;</div>
        <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
            <h2>@ViewBag.Title</h2>
        </div>
    </div>
</div>
<div class="row">
    <div class="offset3 span6">
        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">&nbsp;</div>
        <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8" style="background-color:lightblue;border-radius:10px;">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>To access the resources please create an account.</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                        @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                        </div>
                    </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.PhoneNo, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.PhoneNo, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "e.g. Samuel@967" })
                        <span style="color:red;font-size:small;font-style:italic">Password must be min 8 characters length with one special character and one uppercase e.g. Samuel@967</span>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ReferredBy, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.AutocompleteFor(m => m.ReferredBy, "Autocomplete", "Account")
                        @Html.ValidationMessageFor(m => m.ReferredBy, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-primary" value="Register" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
